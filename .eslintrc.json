{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "globals": {
    "PIXI": true,
    "Float32Array": true
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "semi": ["error", "always"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "curly": ["error", "all"],
    "brace-style": ["error", "stroustrup", { "allowSingleLine": false }],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "eqeqeq": ["error", "always"],
    "no-var": ["error"],
    "no-console": ["warn"],
    "no-trailing-spaces": ["error"]
  }
}
