{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["standard", "plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "globals": {
    "PIXI": true,
    "Float32Array": true
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "import/first": 0,
    "prettier/prettier": [
      2,
      {
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "no-useless-catch": 0,
    "no-prototype-builtins": 0
  }
}
